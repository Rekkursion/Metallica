<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- part of speech & chinese meaning -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dim_general_margin"
            android:layout_marginStart="@dimen/dim_general_margin"
            android:layout_marginEnd="@dimen/dim_general_margin"
            android:weightSum="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

        <TextView
                android:id="@+id/txtv_part_of_speech_and_chinese_meaning_when_adding"
                android:text="@string/str_part_of_speech_and_chinese_meaning"
                android:textSize="@dimen/dim_general_text_size"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn_part_of_speech_when_adding"
                android:spinnerMode="dialog"
                android:importantForAutofill="no"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/edt_chinese_meaning_when_adding"
                android:hint="@string/str_adding_chinese_meaning_hint"
                android:textSize="@dimen/dim_general_text_size"
                android:inputType="text"
                android:importantForAutofill="no"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtn_delete_part_of_speech_and_chinese_meaning_when_adding"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>